<script>

function validateForm() {
    var a = document.forms["contact-form"]["f-name"].value;
    var b = document.forms["contact-form"]["s-name"].value;
    var c = document.forms["contact-form"]["email"].value;
    if (a == null || a == "", b == null || b == "", c == null || c == "") {
      alert("Please Fill All Required Field");
      return false;
    } else{
      alert('Thank you for your submission :-)');
    }
  }

$(document).ready(function() {
  var the_terms = $("#confirm");

  the_terms.click(function() {
    console.log('i am clicked');
      if ($(this).is(":checked")) {
          $(".submission-button").hide();
          $(".submission-class").css('display', 'block');
      } else {
          $(".submission-button").css('display', 'block');
          $(".submission-class").hide();
      }
  });
});
</script>
